<?xml version="1.0" encoding="utf-8"?>
<!-- Widget configuration activity layout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/widget_config_bg"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_title"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/widget_primary_text"
        android:layout_marginBottom="32dp" />

    <!-- Crescent icon -->
    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_crescent"
        android:contentDescription="Noor widget"
        android:layout_marginBottom="24dp" />

    <!-- Theme selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_theme"
        android:textSize="14sp"
        android:textColor="@color/widget_secondary_text"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_theme"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <!-- Language selection -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/widget_config_language"
        android:textSize="14sp"
        android:textColor="@color/widget_secondary_text"
        android:layout_marginBottom="4dp" />

    <Spinner
        android:id="@+id/spinner_language"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/widget_config_cancel"
            android:textColor="@color/widget_secondary_text"
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginEnd="12dp" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/widget_config_save"
            android:textColor="#FFFFFF"
            android:backgroundTint="@color/widget_accent"
            android:paddingStart="24dp"
            android:paddingEnd="24dp" />
    </LinearLayout>

</LinearLayout>
